/var/log/nginx/*.log {
        daily
        missingok
        size 50M
        rotate 20
        compress
        delaycompress
        notifempty
        create 0640 nginx nginx
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}

